/* -*- c -*-*/
#include "input.h"
#include <cgreen/mocks.h>

LexemStream currentInput;

LexemStream makeLexemStream(char *begin, char *read, char *write, char *macroName, InputType streamType) {
    LexemStream stream;
    stream.read       = read;
    stream.begin      = begin;
    stream.write      = write;
    stream.macroName  = macroName;
    stream.streamType = streamType;

    return stream;
}
